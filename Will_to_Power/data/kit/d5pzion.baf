IF
	Class(LastSummonerOf(Myself),THIEF)
	NumTimesTalkedTo(0)
THEN
	RESPONSE #100
	SetNumTimesTalkedTo(1)
	ChangeClass(LastSummonerOf(Myself),MAGE_THIEF)
	ActionOverride(LastSummonerOf(Myself),MakeUnselectable(1))
END

IF
	Class(LastSummonerOf(Myself),MAGE_THIEF)
THEN
	RESPONSE #100
	Wait(1)
	ActionOverride(LastSummonerOf(Myself),AddKit(D5_PSION))
	DestroySelf()
END



	
